@model PublicWebsite.Models.DetailViewModel

@{
    ViewData["Title"] = "Detail";
}
@using dgPadCms.Models
@inject dgPadContext _context
<section id="hero" class="hero d-flex align-items-center section-bg">
    <div class="p-5">
        <h2>Tags</h2>
        
        @foreach (var item in Model.postTerms)
        {
             
                int count = item.Term.PostTerms.Count;
         
                
            <a asp-action="PostByTerm" asp-route-id="@item.Term.TermId">
                <h3> @item.Term.Name <span> <partial>(</partial>@count <partial>)</partial></span></h3>
                <br />
            </a>

            <br>


        }

    </div>
   
    <div class="container">
        <div class="row justify-content-between gy-5">
            
            <div class="col-lg-12 order-2 order-lg-1 d-flex flex-column justify-content-center align-items-center align-items-lg-start text-center text-lg-start">
                <a href="https://localhost:44377/media/posts/@Model.post.Image"  class="glightbox"> 
                     <img class="img-fluid w-50" src="https://localhost:44377/media/posts/@Model.post.Image" style="object-fit: cover;">
                  
                <h2 data-aos="fade-up"> @Model.post.PostTitle </h2>
               
                <p data-aos="fade-up" data-aos-delay="100">@Html.Raw(Model.post.Details)</p>
                
            </div>
           
        </div>
    </div>
</section>


   
    
  


