@model PostType

@{
    ViewData["Title"] = Model.Title;
}



<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            Taxonomies
        </dt>
        <dd class="col-sm-10">
            <table>
                @foreach (var i in ViewBag.isChecked)
                {
                    <tr>
                        <td>
                            <label class="control-label">@i.Taxonomy.Name</label>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PostTypeId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
